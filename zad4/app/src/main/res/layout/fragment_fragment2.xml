<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anna.zad4.Fragment2">

    <RadioGroup
        android:id="@+id/f2_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/f2_vegetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f2_vegetable" />

        <RadioButton
            android:id="@+id/f2_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f2_car" />
    </RadioGroup>


    <LinearLayout
        android:id="@+id/f2_fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
    </LinearLayout>

</RelativeLayout>
